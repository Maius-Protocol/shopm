datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Shop {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  name      String?
  publicKey String?
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  shop_id     String
  name        String
  description String
  category    String
  price       String
  quantity    String
  image       String
  link_s3     String
}

model Order {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  shop_id    String
  session_id String
  product_id String
  status     String
}

model Payment {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  shop_id               String
  candy_pay_public_key  String
  candy_pay_private_key String
}
